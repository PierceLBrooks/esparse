<?xml version="1.0" encoding="UTF-8"?>
<buildster directory="../build">
	<project directory="../Project">
		<dependencies>
			<dependency>
				<label>boost</label>
				<subpath>build</subpath>
				<local>
					<path><data id="BUILDSTER_WD"></data>/../boost</path>
				</local>
				<build>
					<arguments></arguments>
          <shells>
            <shell>
              <work><data id="BUILDSTER_WD"></data>/../boost</work>
              <commands>
                <command>
                  <switch id="BUILDSTER_OS">
                    <case check="Windows">bootstrap.bat</case>
                    <default><quit></quit></default>
                  </switch>
                </command>
                <command>
                  <switch id="BUILDSTER_OS">
                    <case check="Windows">install.bat <install></install></case>
                    <default><quit></quit></default>
                  </switch>
                </command>
              </commands>
            </shell>
          </shells>
				</build>
				<exports>
					<export type="headers">
						<key>BOOST_INCLUDE_PATH</key>
						<value><install></install></value>
					</export>
					<export type="libraries">
						<key>BOOST_LIBRARIES</key>
						<value><install></install></value>
					</export>
				</exports>
				<imports></imports>
			</dependency>
		</dependencies>
		<targets>
			<target type="library">
				<label>libespm</label>
				<definitions></definitions>
				<links>
					<if_check id="BUILDSTER_OS" check="Windows">
						<link>setupapi</link>
						<link>iphlpapi</link>
						<link>psapi</link>
						<link>userenv</link>
						<link>gdi32</link>
						<link>crypt32</link>
						<link>ws2_32</link>
					</if_check>
				</links>
				<exports>
					<export type="headers">
						<key>LIBESPM_INCLUDE_PATH</key>
						<value><install></install>/include</value>
					</export>
					<export type="libraries">
						<key>LIBESPM_LIBRARIES</key>
						<value><install></install>/lib</value>
					</export>
				</exports>
				<imports>
					<import>boost</import>
				</imports>
			</target>
			<target type="executable">
				<label>esparse</label>
				<definitions></definitions>
				<links>
					<link>libespm</link>
					<if_check id="BUILDSTER_OS" check="Windows">
						<link>setupapi</link>
						<link>iphlpapi</link>
						<link>psapi</link>
						<link>userenv</link>
						<link>gdi32</link>
						<link>crypt32</link>
						<link>ws2_32</link>
					</if_check>
				</links>
				<imports>
					<import>boost</import>
					<import>libespm</import>
				</imports>
			</target>
		</targets>
	</project>
</buildster>
